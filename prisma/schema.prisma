generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id            String   @id @default(uuid())
  objectKey     String   @unique
  filename      String
  contentType   String
  sizeBytes     BigInt
  token         String   @unique
  passwordHash  String?
  expiresAt     DateTime
  downloadCount Int      @default(0)
  createdAt     DateTime @default(now())
  transfer      Transfer? @relation(fields: [transferId], references: [id])
  transferId    String?
}

model Transfer {
  id         String   @id @default(uuid())
  title      String?
  message    String?
  token      String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  files      File[]
}
